<section class="container mt-5">
<details>
  <summary class="fs-1 ms-5">Create product</summary>
  <div class="row">

    <div class="col home d-flex justify-content-center">
      <div class="col-8 col-md-4">
          <form action="/sellers/oneSeller/createProduct/<%= resultSeller[0].seller_id %>" method="post" enctype="multipart/form-data" class="d-flex flex-column gap-2">
              <span style="color:red; font-style: italic; text-align: center;"> <%= typeof message != 'undefined' ? message : null %></span>

              <div class="input-group flex-nowrap mb-2">
                <input type="text" class="form-control" placeholder="Name*" aria-label="Username" aria-describedby="addon-wrapping" name="product_name">
              </div>
              
              <div class="input-group mb-3">
                <select class="form-select" id="inputGroupSelect01" name="category">
                  <option selected>Category*</option>
                  <option value="Clothing">Clothing</option>
                  <option value="Electronics">Electronics</option>
                  <option value="Home">Home</option>
                </select>
              </div>

              <div class="input-group mb-3">
                <select class="form-select" id="inputGroupSelect01" name="status">
                  <option selected>Status*</option>
                  <option value="New">New</option>
                  <option value="Good">Good</option>
                  <option value="Used">Used</option>
                </select>
              </div>
              
              <div class="form-floating mb-2">
                <textarea class="form-control" placeholder="Description" id="floatingTextarea" name="product_description"></textarea>
                <label for="floatingTextarea">Description</label>
              </div>
  
              <div class="input-group flex-nowrap mb-2">
                <input type="number" class="form-control" placeholder="Price*" aria-label="Username" aria-describedby="addon-wrapping" name="price">
              </div>

              <div class="input-group mb-3">
                <label class="input-group-text" for="inputGroupFile02">Product image</label>
                <input type="file" class="form-control" id="inputGroupFile02" name="img">
              </div>
              
              <button type="submit" class="relove-button">Submit</button>
          </form>
  
      </div>
    </div>
  </div>
</details>

</section>